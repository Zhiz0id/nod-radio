<resources>
    <style name="DividerHorizontal">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/divider_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_margin</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>
</resources>