<resources>
    <style name="TextAppearance.ActionBar.Title"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="Radiot.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/background_darkest</item>
        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar.Title</item>
    </style>

    <style name="Radiot.Button"
           parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Radiot.ImageButton"
           parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <style name="Theme.Radiot" parent="android:Theme.Holo">
        <item name="android:textViewStyle">@style/Radiot.TextView</item>
        <item name="android:buttonStyle">@style/Radiot.Button</item>
        <item name="android:imageButtonStyle">@style/Radiot.ImageButton</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:actionBarStyle">@style/Radiot.ActionBar</item>
        <item name="android:windowContentOverlay">@drawable/titlebar_shadow</item>
    </style>

    <style name="Theme.RadiotHome" parent="Theme.Radiot">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>